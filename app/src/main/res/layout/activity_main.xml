<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nasim.recyclerview.Main2Activity">

<LinearLayout
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#d261b7b4"
    android:id="@+id/linearLayout"
    android:weightSum="1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_toLeftOf="@+id/linearLayout3"
    android:layout_toStartOf="@+id/linearLayout3">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/horizontalScrollView"
        >



        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#d261b7b4"
            android:gravity="center_horizontal|center_vertical"

            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/gridv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Grid V "

                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/gridh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Grid H" />




            <RadioButton
                android:id="@+id/linv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Lin V "
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/linh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Lin H" />


            <RadioButton
                android:id="@+id/stagV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Stag V "
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/stagH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:background="#e6fffa"
                android:onClick="radion"
                android:padding="8dp"
                android:text="Stag H"

                />
        </RadioGroup>




    </HorizontalScrollView>

</LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="46dp"
        android:weightSum="1"
        android:layout_above="@+id/rec1"
        android:background="#d261b7b4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_gravity="center_horizontal|center_vertical"
            android:background="#e6fffa"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-3dp"
        android:padding="4dp"
        android:background="#fff"

        android:layout_above="@+id/button"
        android:layout_below="@+id/linearLayout" />

    <Button
        android:id="@+id/button"
        android:background="#ef58aeab"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:text="ADD"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        android:layout_alignParentBottom="true" />

</RelativeLayout>
